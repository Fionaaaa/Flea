<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView8_classify_product_pic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:background="@color/blue_m"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textView22_classify_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView8_classify_product_pic"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imageView8_classify_product_pic"
        android:layout_toRightOf="@+id/imageView8_classify_product_pic"
        android:text="商品名称" />

    <TextView
        android:id="@+id/textView30_classify_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView22_classify_product_title"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/textView22_classify_product_title"
        android:layout_toRightOf="@+id/textView22_classify_product_title"
        android:text="19.80￥" />

    <TextView
        android:id="@+id/textView31_classify_product_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView8_classify_product_pic"
        android:layout_alignLeft="@+id/textView22_classify_product_title"
        android:layout_alignStart="@+id/textView22_classify_product_title"
        android:layout_marginBottom="4dp"
        android:text="描述" />
</RelativeLayout>